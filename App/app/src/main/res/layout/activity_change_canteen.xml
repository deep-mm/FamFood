<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChangeCanteenActivity"
    android:background="@drawable/background">

    <android.support.v4.view.ViewPager
        android:id="@+id/vpPager"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true">
    </android.support.v4.view.ViewPager>

    <com.pixelcan.inkpageindicator.InkPageIndicator
        android:id="@+id/indicator"
        android:layout_below="@id/vpPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:ipi_dotDiameter="8dp"
        app:ipi_dotGap="8dp"
        app:ipi_animationDuration="320"
        app:ipi_pageIndicatorColor="@android:color/darker_gray"
        app:ipi_currentPageIndicatorColor="@android:color/black"/>

    <TextView
        android:id="@+id/select_canteen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_text_size"
        android:textStyle="italic"
        android:fontFamily="sans-serif"
        android:text="Select College Canteen To Proceed"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="18dp"/>


</RelativeLayout>