<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/canteen_circle"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/circle_cant"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/canteen_burger"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/burger_icon"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/college_photo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:layout_below="@id/canteen_burger"/>

        <TextView
            android:id="@+id/college_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="KJ Somaiya College Of Engineering"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/editTextColor"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/college_photo"
            />

        <ImageView
            android:id="@+id/canteen_rate"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/college_name"
            android:background="@mipmap/canteen_rating"
            />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="31dp"
            android:layout_below="@id/college_name"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>

</RelativeLayout>