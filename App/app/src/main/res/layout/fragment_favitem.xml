<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:background="@color/transparent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/colorWhite">


        <ImageView
            android:id="@+id/veg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/veg"/>

        <ImageView
            android:id="@+id/jain"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@id/veg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/jain"/>

    <TextView
        android:id="@+id/food_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/veg"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"
        android:text="Veg Fried Rice"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/food_text"
        android:layout_toEndOf="@id/jain"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"
        android:text="RS 65"
        android:textColor="@color/nav_blue"
        android:textSize="16sp" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginLeft="90dp"
        android:layout_toEndOf="@id/food_text"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="ADD TO CART"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

</RelativeLayout>
</RelativeLayout>